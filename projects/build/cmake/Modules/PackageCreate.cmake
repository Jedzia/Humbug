	ADD_CUSTOM_COMMAND(
		OUTPUT ${VFS_PACKAGE_FILE}
		POST_BUILD
		COMMAND ${ZIPPCKG_EXECUTABLE} ${ZIPPCKG_ARGUMENTS}
